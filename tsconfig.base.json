{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "dom.Iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@egov/cvi-icons": ["dist/libs/icons/index"],
      "@egov/cvi-ng": ["libs/ui/src/index.ts"],
      "@egov/cvi-react": ["libs/react-ui/src/index.ts"],
      "@egov/cvi-styles": ["libs/styles/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
