{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/styles/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run generate-styles && npm run copy-styles-assets"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/styles/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/styles"],
      "options": {
        "jestConfig": "libs/styles/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "baseBranch": "master",
        "push": true,
        "noVerify": true,
        "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]",
        "skipCommitTypes": [
          "build",
          "chore",
          "ci",
          "docs",
          "refactor",
          "test",
          "format"
        ]
      }
    }
  },
  "tags": ["scope:veera-styles"]
}
